#parse("/velocity/layout.vm")
#@mainLayout()
<div class="row">
<!--  I have no idea why this should have to be 6 and 4, I think it should be 6 and 3 -->
	<div class="col-md-6 offset-md-4">
	<h2>List of Registered Teams</h2>
	</div>
</div>
<div class="row">
	<div class="">
		<table class = "table table-striped">
		<thead>
			<tr>
				<th scope="col">Number</th>
				<th scope="col">Nickname</th>
				<th scope="col">School / Full Name</th>
				<th scope="col">City</th>
				<th scope="col">State / Province</th>
				<th scope="col">Country</th>
				<th scope="col">Rookie Year</th>
			</tr>
		</thead>
			#foreach ($team in $teams)
				<tr>
					<th scope="row">$team.number</td>
					<td>$team.name</td>
					<td style ="word-break:break-word;">$team.school</td>
					<td>$team.city</td>
					<td>$team.state</td>
					<td>$team.country</td>
					<td>$team.rookie</td>
				</tr>
			#end
		</table>  
	</div>
</div>
	
#end