#parse("/velocity/layout.vm")
#@mainLayout()
<style>
.onlyOnFull {
	display:inherit !important;
}	
</style>
<style type="text/css" media="print">
@page {
    size: auto;   /* auto is the initial value */
    margin: 0;  /* this affects the margin in the printer settings */
}
div.container {
	padding:2em;
}
.onlyOnFull {
	display:none !important;
}
</style>

<div class="row justify-content-left onlyOnFull">
		<a href=".." class="col-4"><< Back To Dashboard</a> <div class="col-8"></div>
</div>
<div class="row justify-content-center">
<div class="col-1 onlyOnFull" style="display:none"></div>
<h2 class="text-center col-10">#if($isLeague)League #{end}$eventName Advancement Report</h2>
<button type="button" class="col-1 btn btn-light onlyOnFull justify-content-center text-center" onclick="window.print()" style="display:none"><i class="fas fa-print fa-2x"></i></button>
</div>
<div class="row">
	<table class = "table table-striped">
			<thead>
				<tr>
					<th scope="col" class="text-center">Number</th>
					<th scope="col" class="text-center">Advancement Criteria</th>
					<th scope="col" class="text-center">Team #</th>
				</tr>
			</thead>
			
			<tbody>
				#foreach($a in $list)
					<tr>
						<td class="text-center">$foreach.count</td>
						<td>$a.criteria</td>
						<td class="text-center">#if($a.team > -1)$a.team $a.status.suffix #end</td>
					</tr>
				#end
			</tbody>
			
	</table>
</div>
<div class="row">
	<small class="col-12 text-center">
	<span class="line">$formattedAppName</span> <span class="line">&copy; 2018-$currentYear <i>FIRST</i>&reg;</span>
	</small>
</div>


#end