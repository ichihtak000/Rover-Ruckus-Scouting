#macro(basicRankings)
<style>
td, th {
	text-align:center;
}
</style>
#if($teamCount)
<div class="row justify-content-center">
<div class="col-1 onlyOnFull" style="display:none"></div>
<h2 class="text-center col-10">#if($isLeague)League #{end}$eventName Ranking</h2>
<button type="button" class="col-1 btn btn-light onlyOnFull justify-content-center text-center" onclick="window.print()" style="display:none"><i class="fas fa-print fa-2x"></i></button>
</div>
<div class="row">
<table class="table col-12 ">
<tr><td class="text-right">Teams:</td><td>$teamCount</td>#if(!$isLeague)<td class="text-right">Matches Per Team:</td><td>$mpt</td>#end<td class="text-right">Most Matches by Team:</td><td>$matchesPlayed</td>#if(!$isLeague)<td class="text-right">Total Matches Played:</td><td>$totalMatchesPlayed</td><td class="text-right">Total Matches Remaining:</td><td>$matchesRemaining</td>#end</tr>
</table>
</div>
<div class="row">
<table class = "table table-striped">
		<thead>
			<tr>
				<th scope="col">Rank</th>
				<th scope="col">Team #</th>
				<th scope="col">Team</th>
				<th scope="col">RP</th>
				<th scope="col">TBP</th>
				<th scope="col">Highest</th>
				<th scope="col">Matches</th>
				#if($hist)
					<th scope="col" class="onlyOnFull2">History</th>
				#end
			</tr>
		</thead>
		#foreach($ranking in $rankings)
		<tr>
			#if($ranking.getRanking() > 0)
				<td>$ranking.getRanking()</td>
				<td>$ranking.getTeamNumber()</td>
				<td>$ranking.getTeamName()</td>
				<td>$ranking.getRP()</td>
				<td>$ranking.getTBP()</td>
				<td>$ranking.getHighest()</td>
				<td>$ranking.getMatchesPlayed()</td>
			#else
				## This team has played 0 matches and thus gets a "NP" for not played
				<td>NP</td>
				<td>$ranking.getTeamNumber()</td>
				<td>$ranking.getTeamName()</td>
				<td>--</td>
				<td>--</td>
				<td>--</td>
				<td>0</td>
			#end
			#if($hist)
				#if($isLeague) ##not combined
					<td><a href="history/$ranking.getTeamNumber()" class="onlyOnFull2">History</a></td>
				#else ##combined
					<td><a href="history/$ranking.getTeamNumber()" class="onlyOnFull2">History</a></td>
				#end
			#end
		</tr>
		#end	
</table>
</div>
<div class="row">
<small class="col-12 text-center">
<span class="line">MatchMaker Scheduling Software</span>  <span class="line">&copy; 2007-2017 Idle Loop Software Design. LLC</span>
<br>
<span class="line">$formattedAppName</span> <span class="line">&copy; 2018-$currentYear <i>FIRST</i>&reg;</span>
</small>
</div>
#else
<div class="row">
<div class="col-11 offset-1">Teams have not been added to this #if($isLeague)league#{else}event#end yet.</div>
</div>
#end
#end