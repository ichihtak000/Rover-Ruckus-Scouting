#parse("/velocity/layout.vm")
#@mainLayout()
<div class="row">
	<h3 class="col-12">$event.data.code: $event.data.name</h3>
</div>
<br>
<div class="row">
	<h4 class="col-12">Event Info</h4>
</div>
<div class="row">
	<ul class="col-11 offset-1">
		<li class="">
			<a class="nav-link" href="schedule/">Match Schedule</a>
		</li>
		<li class="">
			<a class="nav-link" href="rankings/">Rankings #if($isLeagueEvent)(This Event Only)#end</a>
		</li>
		<li class="">
			<a class="nav-link" href="results/">Match Results</a>
		</li>
		<li class="">
			<a class="nav-link" href="display/pit/">Pit Display #if($isLeagueEvent)(This Event Only)#end</a>
		</li>
		<li class="">
			<a class="nav-link" href="reports/">Event Reports</a>
		</li>
	</ul>
</div>
#if($isLeagueEvent)
<div class="row">
	<h4 class="col-12">League Info</h4>
</div>
<div class="row">
	<ul class="col-11 offset-1">
		<li class="">
			<a class="nav-link" href="rankings/combined/">Combined Rankings</a>
		</li>
		<li class="">
			<a class="nav-link" href="display/leaguepit/combined/">Combined Pit Display</a>
		</li>
	#foreach($league in $leagues)
		<li class="">
			<a class="nav-link" href="rankings/league/$league.getCode()">$league.getName() Rankings</a>
		</li>
		<li class="">
			<a class="nav-link" href="display/leaguepit/$league.getCode()">$league.getName() Pit Display</a>
		</li>
	#end
	</ul>
</div>
#end
#if($SCORE_TRACKER)
<div class="row">
	<h4 class="col-12">Score Tracking</h4>
</div>
<div class="row">
	<ul class="col-11 offset-1">
		<li class="">
			<a class="nav-link" href="ref/red/"><span class="redAllianceText">Red</span> Alliance Score Tracking</a>
		</li>
		<li class="">
			<a class="nav-link" href="ref/blue/"><span class="blueAllianceText">Blue</span> Alliance Score Tracking</a>
		</li>
	</ul>
</div>
#end
#if($EVENT_ADMIN)
<div class="row">
	<h4 class="col-12">Event Administration</h4>
</div>
<div class="row">
	<ul class="col-11 offset-1">
		<li class="">
			<a class="nav-link" href="dashboard/">Event Dashboard</a>
		</li>
		<li class="">
			<a class="nav-link" href="control/">Match Control Page</a>
		</li>
		<li class="">
			<a class="nav-link" href="display/">Scoring/Timing Displays</a>
		</li>
	</ul>
</div>
#end
	
#end