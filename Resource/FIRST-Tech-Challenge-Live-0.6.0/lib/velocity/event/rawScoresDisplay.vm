#parse("/velocity/layout.vm")
#@mainLayout()

<script>
var match = -1;
var scoreUpdatePromise;
function getCommand(){
	$.ajax({
        url: "../display/command/",
        type: "GET",
        
        success: function (data) {
        	var d = JSON.parse(data);
            console.log(data);
            if(d.type == "START_MATCH"){
            	match = d.params[0];
            	if(scoreUpdatePromise){
            		scoreUpdatePromise.abort();
            	}
            	showScores();
            }
            getCommand();
        },
        error: function (xhr, textStatus, errorThrown) {
			console.log("ERROR "+textStatus);
			console.log(xhr);
			getCommand();
        }});
}
function showScores(){
	scoreUpdatePromise = $.ajax({
        url: "../display/scoreupdate/"+match+"/",
        type: "GET",        
        success: function (data) {
            console.log(JSON.parse(data));            
            document.getElementById("scores").innerHTML = data;
            showScores();
        },
        error: function (xhr, textStatus, errorThrown) {
			console.log("ERROR "+textStatus);
			console.log(xhr);
        }});
}
getCommand();
</script>

<div id="scores">
</div>

#end