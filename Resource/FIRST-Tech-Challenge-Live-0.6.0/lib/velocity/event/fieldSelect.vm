#parse("/velocity/layout.vm")
#parse("/velocity/event/counter_macro.vm")
#parse("/velocity/utils/spaces.vm")
#@mainLayout()
<link rel="stylesheet" href="/event/ref.css?v=$!random">
<style>
div.form-group > label,
div.form-group > button,
div.form-group > input,
div.form-group > div {
	margin-top:10px;
}
img {
	max-width:100%;
	margin:0px;
}
.red.alliance {
	background: #ED1C24;
}
.blue.alliance {
	background: #0066B3;
}
.alliance {
	color:white;
}
.fieldBtn {
	margin-top:10px;
}
</style>
<div class="row justify-content-center">
	<div class="col-10 alert alliance $alliance text-center">
	Field Selection
	</div>
</div>
#if($fieldCount > 1)
#foreach($field in $fields)
<div class="form-group row justify-content-center">
<a  href="$field" class="btn btn-outline-primary btn-lg col-10 fieldBtn">Field $foreach.count</a>
</div>
#end
#end
<div class="form-group row justify-content-center">
<hr class="col-10">
</div>
<div class="form-group row justify-content-center">
<a href="$all"  class="btn btn-outline-primary btn-lg col-10 fieldBtn">All Matches</a>
</div>

  
#end