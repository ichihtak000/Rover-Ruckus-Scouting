			<input type="text" onchange="changed()" name="eventStartDate" id="startDatePicker" class="form-control" name="datepicker" placeholder="mm/dd/yyyy" #if($startDate)value="$startDate"#end #if($divisionEvent) disabled class="disabled"#end>
