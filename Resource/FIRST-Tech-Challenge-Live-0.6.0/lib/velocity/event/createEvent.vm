            </div>
		</div>
		<div class="form-group">
			<label for="endDatepicker">Event End Date:</label>
			<div class="input-group">
			<input type="text" name="eventEndDate" id="endDatePicker" class="form-control" name="datepicker" placeholder="mm/dd/yyyy" #if($endDate)value="$endDate"#end #if($divisionEvent) disabled class="disabled"#end>
			<!--
			<span class="input-group-append">
				<span class="input-group-text" id="cal_icon">
                <i class="fas fa-calendar-alt"></i>
                </span>
            </span>
            -->
            </div>
		</div>
		<br>
		<div class="form-check">
			<input type="checkbox" name="dualDivision" id="dualDivisionCheck" class="form-check-input" onclick="setFieldVisible(this)" #if($eventCode)checked disabled#end>
