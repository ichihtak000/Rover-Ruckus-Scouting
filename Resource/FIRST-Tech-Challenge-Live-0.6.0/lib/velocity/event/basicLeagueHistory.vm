#macro(history $matches)
	<table class = "table" align=center>
		<thead>
			<tr align=center>
				<th scope="col">Event</th>
				<th scope="col">Match</th>
				<th scope="col">RP</th>
				<th scope="col">TBP</th>	
				<th scope="col">Score</th>	
				<th scope="col">Counted?</th>	
			</tr>
		</thead>
		#set($i = 0)
		#foreach($m in $matches)		
			#if($i % 2 == 0)
				#set ($c = "#FFFFFF")	
			#else
				#set ($c = "#CCCCCC")
			#end	
	
			<tr align=center>
				<td bgcolor="$c">
					#set($meet = false)
					#set($meet = $meets.get($m.eventCode).name)
					#if($meet)
						$meet ($m.eventCode)
					#else
						($m.eventCode)
					#end
				</td>				
				<td bgcolor="$c">$m.matchNumber</td>
				<td bgcolor="$c">$m.rp</td>
				<td bgcolor="$c">$m.tbp</td>
				<td bgcolor="$c">$m.score</td>
				#if($used.contains($m))
					<td bgcolor="#00FF00">&#10004;</td>
				#else
					<td bgcolor="$c"></td>
				#end
				
			</tr>
		
			#set($i = $i + 1)
		#end	
</table>
#end

#macro(basicLeagueHistory)
<style>
td, th {
	text-align:center;
	vertical-align:middle !important;
}
</style>
<script>
function toggle(){
	var dateSort = $("#dateSort");
	var topSort = $("#topSort");
	dateSort.prop("hidden", !dateSort.prop("hidden"));
	topSort.prop("hidden", !topSort.prop("hidden"));
	var icon = $("#toggleIcon");
	icon.removeClass("fa-toggle-on fa-toggle-off");
	icon.addClass(topSort.prop("hidden") ? "fa-toggle-off" : "fa-toggle-on");
}
</script>
#if($matches.size() > 0)
<div class="row justify-content-center">
<h3 class="col-1 onlyOnFull txt-center">Date</h3>
<div class="col-1 onlyOnFull btn btn-light justify-content-center text-center" onclick="toggle()"><i class="fas fa-toggle-off fa-2x" id="toggleIcon"></i></div>
<h3 class="col-1 onlyOnFull text-center">Top</h3>
<h2 class="text-center col-6">Team $team League History</h2>
<div class="col-2 onlyOnFull"></div>
<button type="button" class="col-1 btn btn-light onlyOnFull justify-content-center text-center" onclick="window.print()" style="display:none"><i class="fas fa-print fa-2x"></i></button>
</div>
<div class="row" id="dateSort">
#history($matches)
</div>
<div class="row" id="topSort" hidden>
#history($matches2)
</div>
<div class="row">
<small class="col-12 text-center">
Results current as of $currentTime
<br>
<span class="line">MatchMaker Scheduling Software</span>  <span class="line">&copy; 2007-2017 Idle Loop Software Design. LLC</span>
<br>
<span class="line">$formattedAppName</span> <span class="line">&copy; 2018-$currentYear <i>FIRST</i>&reg;</span>
</small>
</div>
#else
<div class="row">
<div class="col-11 offset-1">No Matches Played</div>
</div>
#end
#end