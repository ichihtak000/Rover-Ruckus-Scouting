#macro(basicSchedule)
#if($teamCount)
<script>
$( document ).ready(function() {
    $(".start").hide();
});
function showStart() {
	if ($("#showStartTime").prop("checked")) {
		$(".start").show();
	} else {
		$(".start").hide();	
	}
}
</script>
<style>
	.left-border {
		border-left: 1px solid #dee2e6;
	}
	.right-border {
		border-right: 1px solid #dee2e6;
	}
</style>
<div class="row justify-content-center">
<div class="col-3 onlyOnFull"><label><input type="checkbox" id="showStartTime" onclick="showStart()"/>Show Start Time</label></div>
<h2 class="text-center col-6">$eventName Schedule</h2>
<div class="col-2 onlyOnFull">&nbsp;</div>
<button type="button" class="col-1 btn btn-light onlyOnFull justify-content-center text-center" onclick="window.print()" style="display:none"><i class="fas fa-print fa-2x"></i></button>
</div>
<div class="row">
<table class="table col-12 ">
<tr><td class="text-right">Teams:</td><td>$teamCount</td><td class="text-right">Matches Per Team:</td><td>$mpt</td><td class="text-right">Matches:</td><td>$matches</td><td class="text-right start">Cycle Time:</td><td class="start">$cycle min.</td></tr>
</table>
</div>
<div class="row">
<table class = "table table-striped">
		<thead>
			<tr>
				<th scope="col" class="start text-center">Start</th>
				<th scope="col" class="text-center">Match</th>
				<th scope="col" class="text-center">Field</th>
				<th scope="col" class="text-center left-border">Red 1</th>
				<th scope="col" class="text-center">Red 2</th>
				<th scope="col" class="text-center left-border">Blue 1</th>
				<th scope="col">Blue 2</th>
			</tr>
		</thead>
		#set($curMatch = 0)
		#foreach($slot in $slots)
		<tr>
		<td class="start text-center">$slot.getDisplayStartTime()</td>
		#if($slot.getType() == "MATCH")
			<td class="text-center">$slot.getLabel()</td>
			#if($matchList)
				#set($cur = $matchList.get($curMatch))
				<td class="text-center">$cur.getField()</td>	
				<td class="text-center left-border">$cur.getRed1DisplayString()</td>
				<td class="text-center">$cur.getRed2DisplayString()</td>
				<td class="text-center left-border">$cur.getBlue1DisplayString()</td>
				<td class="text-center">$cur.getBlue2DisplayString()</td>
				#set($curMatch = $curMatch + 1)
			#else
				<td class="text-center">--</td>
				<td class="text-center left-border">--</td>
				<td class="text-center">--</td>
				<td class="text-center left-border">--</td>
				<td class="text-center">--</td>
			#end
		#elseif($slot.getType() == "BREAK")
		<td colspan="7" class="text-center">$slot.getLabel()</td>
		#end	
		</tr>
		#end	
</table>
</div>
<div class="row">
<small class="col-12 text-center">
<span class="line">MatchMaker Scheduling Software</span>  <span class="line">&copy; 2007-2017 Idle Loop Software Design. LLC</span>
<br>
<span class="line">$formattedAppName</span> <span class="line">&copy; 2018-$currentYear <i>FIRST</i>&reg;</span>
</small>
</div>
#else
<div class="row">
<div class="col-11 offset-1">The schedule has not been created yet.</div>
</div>
#end
#end