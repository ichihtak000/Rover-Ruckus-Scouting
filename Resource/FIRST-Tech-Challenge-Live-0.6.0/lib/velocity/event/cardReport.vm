#parse("/velocity/layout.vm")

#@mainLayout()
<style>
.onlyOnFull {
	display:inherit !important;
}	
</style>
<style type="text/css" media="print">
@page {
    size: auto;   /* auto is the initial value */
    margin: 0;  /* this affects the margin in the printer settings */
}
div.container {
	padding:2em;
}
.onlyOnFull {
	display:none !important;
}
</style>
<div class="row onlyOnFull">
	<div class="col-12">
		<a href=".."><< Back to Reports</a>
	</div>
</div>
#if($matches.size()>0)

<style>
	.left-border {
		border-left: 1px solid #dee2e6;
	}
	.right-border {
		border-right: 1px solid #dee2e6;
	}
	.red-true{
		background-color:red;
		font-weight:bold;
	}
	.yellow-true{
		background-color:yellow;
		font-weight:bold;
	}
	.yellow-true.red-true{
		background: linear-gradient(to bottom right, yellow 0%,yellow 50%,red 50%,red 50%);
		font-weight:bold;
	}
</style>
<div class="row justify-content-center">
<div class="col-3 onlyOnFull"></div>
<h2 class="text-center col-6">$eventName Card Report</h2>
<div class="col-2 onlyOnFull">&nbsp;</div>
<button type="button" class="col-1 btn btn-light onlyOnFull justify-content-center text-center" onclick="window.print()" style="display:none"><i class="fas fa-print fa-2x"></i></button>
</div>

<div class="row">
<table class = "table table-striped">
		<thead>
			<tr>
				<th scope="col" class="text-center">Match</th>
				<th scope="col" class="text-center left-border">Red 1</th>
				<th scope="col" class="text-center">Red 2</th>
				<th scope="col" class="text-center left-border">Blue 1</th>
				<th scope="col">Blue 2</th>
			</tr>
		</thead>
		#foreach($cur in $matches)
		<tr>
		##TODO color for cards.		
				<td class="text-center">$cur.getShortName()</td>
				<td class="text-center left-border yellow-${cur.red.scores.receivedYellow1()} red-${cur.red.scores.receivedRed1()}">$cur.getRed1DisplayString()</td>
				<td class="text-center yellow-${cur.red.scores.receivedYellow2()} red-${cur.red.scores.receivedRed2()}">$cur.getRed2DisplayString()</td>
				<td class="text-center left-border yellow-${cur.blue.scores.receivedYellow1()} red-${cur.blue.scores.receivedRed1()}">$cur.getBlue1DisplayString()</td>
				<td class="text-center yellow-${cur.blue.scores.receivedYellow2()} red-${cur.blue.scores.receivedRed2()}">$cur.getBlue2DisplayString()</td>
		</tr>
		#end	
</table>
</div>
<div class="row">
<small class="col-12 text-center">
<span class="line">MatchMaker Scheduling Software</span>  <span class="line">&copy; 2007-2017 Idle Loop Software Design. LLC</span>
<br>
<span class="line">$formattedAppName</span> <span class="line">&copy; 2018-$currentYear <i>FIRST</i>&reg;</span>
</small>
</div>
#else
<div class="row">
<div class="col-11 offset-1">The schedule has not been created yet.</div>
</div>
#end#end