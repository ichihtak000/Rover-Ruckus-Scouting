#macro(counterMacro $label $init $limit)
<script>
function onDown$bodyContent() {
	var cur = document.getElementById('$bodyContent').value;
	var prevCur = parseInt(cur);
	if (cur == '') {
		cur = 0;
	} else {
		cur = parseInt(cur) - 1;
	}
	if (cur < 0) {
		cur = 0;
	}
	document.getElementById('$bodyContent').value = cur;
	if (cur != prevCur && typeof onChange$bodyContent === "function") {
		onChange$bodyContent(cur);
	}
}
function onUp$bodyContent() {
	var cur = document.getElementById('$bodyContent').value;
	var prevCur = parseInt(cur);
	if (cur == '') {
		cur = 0;
	} else {
		cur = parseInt(cur) + 1;
	}
	#if($limit)
	if (cur > $limit) {
		cur = $limit
	}
	#end
	document.getElementById('$bodyContent').value = cur;
	if (cur != prevCur && typeof onChange$bodyContent === "function") {
		onChange$bodyContent(cur);
	}
}

function onChange$bodyContent(cur){
	scoreUpdate();//we are sending everything every time, so don't worry about putting the data in the function
}
</script>
<label for="$bodyContent" class="col-4 col-lg-2 col-form-label vertical-center">$label</label>
    <button class="btn col-2 col-lg-1" onClick="onDown$bodyContent()">
    	<i class="fa fa-minus-square fa-2x" aria-hidden="true"></i>
    </button>
    <input class="col-2 col-lg-1 form-control text-center counter" id="$bodyContent" #if($init)value="$init"#else value="0" #end readonly/>
    <button class="btn col-2 col-lg-1" onClick="onUp$bodyContent()">
    	<i class="fa fa-plus-square fa-2x" aria-hidden="true"></i>
    </button>
#end