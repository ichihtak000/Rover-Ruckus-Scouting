#parse("/velocity/layout.vm")
#@mainLayout()
<script>
$().ready(function() {
	$("#status").hide();
});
function createAccount() {
## js is magic: https://stackoverflow.com/questions/827294/how-to-get-all-of-the-ids-with-jquery
		o = {
			username: $("#username").val(),
			password1: $("#password1").val(),
			password2: $("#password2").val(),
			roles: JSON.stringify($("input[type='checkbox']:checked").map(function(){return this.value;}).get())
		};
		$.ajax({
		    url: '.',
		    type: #if($editingUsername)'PUT'#else'POST'#end,
		    data: o,
		    success: function (data,textStatus, xhr) {
		    	window.location.href = "/users/manage/" + o.username + "/";
		    },
		    error: function(xhr, status, error){
		    	$("#status").show();
				$("#status").text(xhr.responseText);		    
		    }
		});
}
function deleteAccount() {
			$.ajax({
		    url: '.',
		    type: 'DELETE',
		    success: function (data,textStatus, xhr) {
		    	window.location.href = "/users/manage/";
		    },
		    error: function(xhr, status, error){
		    	$("#status").show();
				$("#status").text(xhr.responseText);		    
		    }
		});
}
</script>
<div class="row">
	<div class="col-md-6 offset-md-3">
		  <div class="form-group">
    		<label for="username">Username:</label>
    		<input type="text" class="form-control" id="username" name="username" placeholder="Enter username" #if($editingUsername)value="$editingUsername" disabled#end>
  		</div>
  		<div class="form-group">
    		<label for="password1">Password</label>
    		<input type="password" class="form-control" id="password1" name="password1" placeholder="Password">
  		</div>
  		<div class="form-group">
    		<label for="password2">Re-enter Password</label>
    		<input type="password" class="form-control" id="password2" name="password2" placeholder="Re-enter Password">
  		</div>
  		<div class="form-group">
  			<label>Roles:</label>
  			<br>
  			<small>You should independently verify that this user has completed all of the required training for the selected roles.</small>
  		</div>
  			#foreach($role in $eventAssignableRoles)
	<div class="form-check">
  		<input class="form-check-input" type="checkbox" value="$role" name="role" id="${role}Check" #if($editingUsername && $userRoles.contains($role.toString())) checked #end>
  		<label class="form-check-label" for="${role}Check">
    		$role.getDisplayString()
  		</label>
	</div>
	#end
	<br>
		<button class="btn btn-primary" onclick="createAccount()">#if($editingUsername)Update#{else}Create#end Account</button>
		#if($editingUsername)
		<button class="btn btn-danger float-right" onclick="deleteAccount()">Delete Account</button>
		#end
		<br>
		<br>
		<div class="alert alert-danger" id="status">
		</div>
	</div>
	</div>
#end