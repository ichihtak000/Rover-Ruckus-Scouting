#macro(mainLayout)
<!DOCTYPE html>
<html lang="en">
<head>
	<title>$appName</title>
	
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	
	<link rel="stylesheet" href="/main.css?v=$!random">
	<link rel="icon" href="/favicon.png">
	<link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
	<link href="/fontawesome/web-fonts-with-css/css/fontawesome-all.min.css" rel="stylesheet">
  	<link rel="stylesheet" href="/js/jquery-ui.css">
  	<style>
  	#versionHeader {
		background:#274555;
		color:#ccc;
		padding:2px;
  	}
  	nav {
		padding-top:0 !important;  	
  	}
  	</style>
  	<style type="text/css" media="print">
  	#versionHeader {
  		display:none;
  	}
  	</style>
</head>
<body>
	<script src="/js/jquery-1.12.4.js"></script>
  	<script src="/js/jquery-ui.js"></script>
  	<script src="/js/general.js"></script>
	<script src="/bootstrap/js/bootstrap.min.js"></script>
<div class="container">
<div id="versionHeader" class="text-center">
	<span class="line">$formattedAppName v$appVersion</span> <span class="line">running at $localIP#if($port!=80):$port#end</span>
</div>
<nav class="navbar navbar-expand-md navbar-dark bg-light justify-content-between" style="background-color: #274555 !important">
	 <a class="navbar-brand" href="/">
    	<!-- <img src="/img/logo.png" width="120" height="95" class="d-inline-block align-center" alt=""> -->
    	<img src="/img/logo_horiz.png" width="199" height="60" class="d-inline-block align-center" alt="">
    	<!-- Rover Ruckus -->
  	 </a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav">	
    #if($EVENT_ADMIN)
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
         Event Admin
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
        #if($eventCode)
        <a class="dropdown-item" href="/event/$eventCode/dashboard/">$eventCode Dashboard</a>
        #end
          <a class="dropdown-item" href="$!CREATE_EVENT_PAGE">Create Event</a>
          <a class="dropdown-item" href="$!CREATE_ACCOUNT_PAGE">Create User</a>
          <a class="dropdown-item" href="/users/manage/">Manage Users</a>
          <a class="dropdown-item" href="/manage/">Manage Server</a>
        </div>
      </li>
    #end
    </ul>
    <!-- BEGIN LEFT -->
    <div class="navbar-nav ml-auto">
    <ul class="navbar-nav">
      <li class="nav-item">
    	<a class="nav-link" href="$!FEEDBACK_PAGE">Feedback</a>  
      </li>
    </ul>
    <div class="dropdown-divider"></div>
    <ul class="navbar-nav">
      <li class="nav-item">
      	#if($loggedIn)
      		<a class="nav-link" href="$!ACCOUNT_PAGE">Hello, $username</a>
      	#else
      		<a class="nav-link" href="$!LOGIN_PAGE">Login</a>
      	#end
      </li>
    </ul>
    </div>
     <!-- END LEFT -->
  </div>
</nav>
<hr>
$bodyContent
<br>
<br>
</div>

</body>
</html>
#end